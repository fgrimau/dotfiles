bindsym $mod+i exec rofi -combi-modi window -theme flamingo -font "JetBrains Mono 10" -show window -icon-theme "Papirus" -show-icons
bindsym $mod+c exec rofi calc -theme flamingo -font "JetBrains Mono 10" -show calc
